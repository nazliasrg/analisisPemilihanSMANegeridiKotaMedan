<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/pastel1"
    tools:context=".sistemZonasi">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingTop="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/alamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Alamat Tempat Tinggal"
            android:paddingStart="30dp"
            android:textColor="@android:color/black"
            android:layout_gravity="center"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:paddingStart="5dp"
            android:src="@drawable/ic_arrow"/>

    </LinearLayout>

    <TextView
        android:id="@+id/alamatSiswa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:textSize="14sp"
        android:text="Alamat Siswa"
        android:textColor="@android:color/secondary_text_dark"
        android:paddingTop="10dp"
        android:paddingStart="30dp"
        android:paddingBottom="16dp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INPUT NILAI UJIAN NASIONAL \n Sekolah Menengah Pertama (SMP)"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="30dp"
            android:paddingStart="50dp"
            android:paddingBottom="16dp">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Bahasa Indonesia"
                android:textSize="16dp"/>

            <TextView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:text=":"/>

            <EditText
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:id="@+id/bahasa"
                android:inputType="numberDecimal"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="30dp"
            android:paddingStart="50dp"
            android:paddingBottom="16dp">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Bahasa Inggris"
                android:textSize="16dp"/>

            <TextView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:text=":"/>

            <EditText
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:id="@+id/inggris"
                android:inputType="numberDecimal"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="30dp"
            android:paddingStart="50dp"
            android:paddingBottom="16dp">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Matematika"
                android:textSize="16dp"/>

            <TextView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:text=":"/>

            <EditText
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:id="@+id/matematika"
                android:inputType="numberDecimal"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="30dp"
            android:paddingStart="50dp"
            android:paddingBottom="16dp">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Ilmu Pengetahuan Alam"
                android:textSize="16dp"/>

            <TextView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:text=":"/>

            <EditText
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:id="@+id/ipa"
                android:inputType="numberDecimal"/>

        </LinearLayout>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp">
        <Button
            android:id="@+id/hasil"
            android:background="@color/orange"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="1dp"
            android:layout_alignParentBottom="true"
            android:paddingVertical="20dp"
            android:text="HASIL PEMILIHAN" />

    </RelativeLayout>

</LinearLayout>